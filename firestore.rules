rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // 1. Helper function to check if user is authenticated and matches the requested UID
    function isUser(uid) {
      return request.auth != null && request.auth.uid == uid;
    }

    // 2. User Profile Isolation - All subcollections
    match /users/{uid} {
      allow read, write: if isUser(uid);

      // Progress documents
      match /progress/{itemId} {
        allow read, write: if isUser(uid);
      }
      
      // Preferences/config
      match /preferences/{configId} {
        allow read, write: if isUser(uid);
      }

      // Activity log
      match /activity/{activityId} {
        allow read, write: if isUser(uid);
      }

      // Global tags (first-class entities)
      match /tags/{tagId} {
        allow read, write: if isUser(uid);
      }
    }

    // 3. Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
